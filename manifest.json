{
  "manifest_version": 3,
  "name": "Dashboard New Tab",
  "version": "1.0.3",
  "description": "A customizable dashboard",
  "permissions": ["storage", "identity"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "chrome_url_overrides": {
    "newtab": "index.html"
  },

  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}

